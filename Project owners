#Projects and their owner

for PROJECT in `gcloud projects list --format="value(projectId)"`
do
   printf "%s:\n" ${PROJECT}
   gcloud projects get-iam-policy ${PROJECT} --flatten="bindings[].members[]" --filter="bindings.role=roles/owner" --format="value(bindings.members)"
   printf "\n" 
done


# Make account owner 
# https://cloud.google.com/iam/docs/granting-changing-revoking-access#iam-view-access-gcloud
gcloud organizations add-iam-policy-binding ########### \
    --member=group:XXX@XXX.com --role=roles/owner
